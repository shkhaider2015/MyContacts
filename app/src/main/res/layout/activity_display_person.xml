<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">




    <ImageView
        android:id="@+id/display_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <TableRow
            android:layout_height="100dp"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Shakeel Haider"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>

        </TableRow>
        <TableRow
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Phone"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="03460027852"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>

        </TableRow>
        <TableRow
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Email"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="shkhaider2015@gmail.com"
                android:maxLines="2"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>

        </TableRow>
        <TableRow
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Category"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/display_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Family"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>

        </TableRow>



    </TableLayout>

    

    <Button
        android:id="@+id/display_update"
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/display_call"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bgbtnupdate"/>


    <Button
        android:id="@+id/display_call"
        android:text="CALL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bgbtn"/>


</androidx.constraintlayout.widget.ConstraintLayout>